        <div id="bahasa-content-container">

            <button type="button" data-bs-toggle="modal" data-bs-target="#addTaskModal" class="btn btn-primary">Add Task</button>

            <table class="table table-sm" id="data-table-view">
                <thead>
                    <th>Kegiatan</th>
                    <th>Catatan</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Aksi</th>
                </thead>
    
                <tbody>
                    <% for (let i = 0; i < taskData.length; i++) { %>
                    <tr>
                        <td><%= taskData[i].kegiatan %></td>
                        <td><%= taskData[i].catatan %></td>
                        <td>

                            <div class="dropdown">
                                <a class="dropdown-toggle text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false"><%= taskData[i].status_tugas %></a>
                                
                                <ul class="dropdown-menu animate__animated animate__fadeInUp" style="font-size: 14px;">
                                    <li><a class="dropdown-item" href="#">Belum Dikerjakan</a></li>
                                    <li><a class="dropdown-item" href="#">Belum Selesai</a></li>
                                    <li><a class="dropdown-item" href="#">Selesai</a></li>
                                </ul>
                            </div>
                        </td>
                        <td><%= taskData[i].date_task %></td>

                        <td>
                            <a href="">hapus</a>
                            <i class="fa-solid fa-gear fa-spin"></i>
                        </td>
                    </tr>

                    <% } %>
                </tbody>
            </table>
            <button class="btn"></button>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Tambah Task</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/post_task" method="POST">
            
            <div class="form-floating mt-3">
                <input type="text" name="kegiatan" class="form-control" id="floatingKegiatan" placeholder="kegiatan"required>
                <label for="floatingKegiatan">Kegiatan</label>
                <div class="form-text ms-2">(* Rutinitas apa yang dilakukan</div>
            </div>

            <div class="form-floating mt-3">
                <input type="text" name="catatan" class="form-control" id="floatingKegiatan" placeholder="kegiatan" required>
                <label for="floatingKegiatan">Catatan</label>
                <div class="form-text ms-2">(* Catatan jika ada</div>
            </div>

            <div class="form-floating mt-3">
                <input type="date" name="date_task" class="form-control" id="floatingDate" placeholder="TanggalKerja" required>
                <label for="floatingDate">Tanggal Kerja</label>
                <div class="form-text ms-2">(* Catatan jika ada</div>
            </div>


            <div class="form-floating mt-3">
                <select class="form-select" name="status_tugas" id="floatingSelect" aria-label="Floating label select example" required>
                  <option >Pilih Status</option>
                  <option value="Belum Dikerjakan" selected>Belum Dikerjakan</option>
                  <option value="Belum Selesai">Belum Selesai</option>
                  <option value="Selesai">Selesai</option>
                </select>
                <label for="floatingSelect">Status</label>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
            <button type="submit" class="btn btn-primary">POST</button>
        </div>
            </form>
        </div>
    </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="assets/js/convertDate.js"></script>


