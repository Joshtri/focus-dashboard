    <script>
        function showDashboardContent() {
            console.log("Menampilkan Dashboard Ikhtisar Data");
            document.getElementById('dashboard-content-container').classList.remove("hidden");
            document.getElementById('berita-terkini-container').classList.add("hidden");
            document.getElementById('mini-games-container').classList.add("hidden");
            document.getElementById('music-session-container').classList.add("hidden");
            // Tambahkan logika atau tindakan yang sesuai untuk menampilkan konten berita terkini

            // Tambahkan kelas "active" pada tombol Dashboard dan hapus dari tombol Berita Terkini
            document.getElementById('menu-dashboard').classList.add("active");
            document.getElementById('menu-berita-terkini').classList.remove("active");
            document.getElementById('menu-mini-games').classList.remove("active");
            document.getElementById('menu-music-session').classList.remove("active");
        }

        function showBeritaTerkini() {
            document.getElementById('berita-terkini-container').classList.remove("hidden");
            document.getElementById('mini-games-container').classList.add("hidden");
            document.getElementById('music-session-container').classList.add("hidden");
            document.getElementById('dashboard-content-container').classList.add("hidden");
            // Tambahkan logika atau tindakan yang sesuai untuk menampilkan konten berita terkini

            // Tambahkan kelas "active" pada tombol Berita Terkini dan hapus dari tombol Dashboard
            document.getElementById('menu-dashboard').classList.remove("active");
            document.getElementById('menu-berita-terkini').classList.add("active");
            document.getElementById('menu-mini-games').classList.remove("active");
            document.getElementById('menu-music-session').classList.remove("active");
        }


        function showMiniGames() {
            console.log("Menampilkan Konten Mini Games");
            document.getElementById('berita-terkini-container').classList.add("hidden");
            document.getElementById('mini-games-container').classList.remove("hidden");
            document.getElementById('music-session-container').classList.add("hidden");
            document.getElementById('dashboard-content-container').classList.add("hidden");
            // Tambahkan logika atau tindakan yang sesuai untuk menampilkan konten berita terkini

            // Tambahkan kelas "active" pada tombol Berita Terkini dan hapus dari tombol Dashboard
            document.getElementById('menu-dashboard').classList.remove("active");
            document.getElementById('menu-berita-terkini').classList.remove("active");
            document.getElementById('menu-mini-games').classList.add("active");
            document.getElementById('menu-music-session').classList.remove("active");
        }

        function showMusicSession() {
            console.log("Menampilkan Konten Music Session");
            document.getElementById('berita-terkini-container').classList.add("hidden");
            document.getElementById('mini-games-container').classList.add("hidden");
            document.getElementById('music-session-container').classList.remove("hidden");
            document.getElementById('dashboard-content-container').classList.add("hidden");
            // Tambahkan logika atau tindakan yang sesuai untuk menampilkan konten berita terkini

            // Tambahkan kelas "active" pada tombol Berita Terkini dan hapus dari tombol Dashboard
            document.getElementById('menu-dashboard').classList.remove("active");
            document.getElementById('menu-berita-terkini').classList.remove("active");
            document.getElementById('menu-mini-games').classList.remove("active");
            document.getElementById('menu-music-session').classList.add("active");
        }


        // Event listener untuk menangkap klik pada menu Data Mitra
        document.addEventListener("DOMContentLoaded", function () {

            document.getElementById("menu-berita-terkini").addEventListener("click", function (event) {
                event.preventDefault();
                showBeritaTerkini();
            });

            // Event listener untuk menangkap klik pada menu Dashboard
            document.getElementById("menu-dashboard").addEventListener("click", function (event) {
                event.preventDefault();
                showDashboardContent();
            });

            // Event listener untuk menangkap klik pada menu mini games
            document.getElementById("menu-mini-games").addEventListener("click", function (event) {
                event.preventDefault();
                showMiniGames();
            });

            // Event listener untuk menangkap klik pada menu music session
            document.getElementById("menu-music-session").addEventListener("click", function (event) {
                event.preventDefault();
                showMusicSession();
            });

        });
    </script>


