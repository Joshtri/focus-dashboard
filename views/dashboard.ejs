    <script>
        function toggleDarkMode() {
            const body = document.body;
            const tables = document.querySelectorAll('.table');
            const darkModeBtn = document.querySelector('.btn');
    
            // Toggle dark mode class on the body
            body.classList.toggle('dark-mode-bg');
            // Toggle dark mode class on tables
            tables.forEach(table => table.classList.toggle('table-dark-mode'));
            // Toggle dark mode text color on the button
            darkModeBtn.classList.toggle('dark-mode-text');
        }
    </script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const body = document.body;

        // Periksa preferensi dark mode yang disimpan
        const isDarkMode = localStorage.getItem('darkMode') === 'true';

        // Terapkan dark mode jika disimpan sebelumnya
        body.classList.toggle('dark-mode-bg', isDarkMode);
    });

    function toggleDarkMode() {
        const body = document.body;
        const isDarkMode = body.classList.toggle('dark-mode-bg');

        // Simpan preferensi dark mode ke localStorage
        localStorage.setItem('darkMode', isDarkMode);
    }
</script>
    
    

